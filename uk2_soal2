#include<iostream>
using namespace std;

int main(){
	long long detik, hari, jam, menit, sisa;

    cout<<"==========================================="<<endl;
	cout<<"  Program Konversi Waktu Menggunakan Hari "<<endl;
	cout<<"==========================================="<<endl;
	cout<<"Masukkan bilangan >1 (Satuan detik): ";
	cin>>detik;
	
	hari = detik/86400;
	sisa = detik%86400;
	jam = sisa/3600;
	sisa = sisa%3600;
	menit = sisa/60;
	sisa = sisa%60;

    cout<<endl;
	cout<<"Hasil Konversi: "<<endl;
    cout<<"-------------------------------------------------"<<endl;
	cout<< detik << " detik = " << hari << " Hari, " << jam << " Jam, " 
        << menit << " Menit, " << sisa << " Detik." <<endl;
    cout<<"-------------------------------------------------"<<endl;
	
	return 0;
}
