#include<iostream>
using namespace std;

int main(){
	int detik, jam, menit, sisa;
	
	cout<<"Masukkan bilangan >1 (Satuan detik): ";
	cin>>detik;
	
	jam = detik/3600;
	sisa = detik%3600;
	menit = sisa/60;
	sisa = sisa%60;
	
	cout<<"Hasil Konversi: "<<endl;
	cout<<detik<<" detik = "<<jam<<" Jam, "<<menit<<" Menit, "<<sisa<<" Detik."<<endl;
	
	return 0;
}
